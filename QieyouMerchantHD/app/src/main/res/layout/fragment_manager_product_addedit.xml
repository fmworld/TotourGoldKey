<?xml version="1.0" encoding="utf-8"?>
<com.qieyou.qieyoustore.ui.widget.TransScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_mgr_pro_ae_bg"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/home_mgr_pro_addedit_title_bg">

            <TextView
                android:id="@+id/home_mgr_pro_ae_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginLeft="17dp"
                android:text="@string/home_mgr_pro_addedit_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/home_mgr_pro_ae_close_size" />

            <TextView
                android:id="@+id/home_mgr_pro_ae_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/home_mgr_pro_ae_title_size" />

            <TextView
                android:id="@+id/home_mgr_pro_ae_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:layout_marginRight="17dp"
                android:text="@string/home_mgr_pro_addedit_done"
                android:textColor="@color/white"
                android:textSize="@dimen/home_mgr_pro_ae_close_size" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/home_mgr_pro_addedit_addpic_bg"
            android:orientation="vertical"
            android:paddingBottom="21dp"
            android:paddingTop="21dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ae_pic_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    android:src="@drawable/home_mgr_pro_ae_required" />

                <TextView
                    android:id="@+id/pro_pic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/ae_pic_required"
                    android:text="@string/home_mgr_pro_ae_addpic_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/home_mgr_pro_ae_title_size" />

                <TextView
                    android:id="@+id/pro_pic_title_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/pro_pic_title"
                    android:text="@string/home_mgr_pro_ae_addpic_title_notify"
                    android:textColor="@color/home_mgr_pro_addedit_title_hint_text"
                    android:textSize="@dimen/home_mgr_pro_ae_close_size" />
            </RelativeLayout>

            <com.qieyou.qieyoustore.ui.widget.NoScrollGridView
                android:id="@+id/home_mgr_pro_ae_pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="54dp"
                android:numColumns="8"
                android:verticalSpacing="17dp"
                android:layout_marginTop="13dp">

            </com.qieyou.qieyoustore.ui.widget.NoScrollGridView>
        </LinearLayout>
        <include
            layout="@layout/list_item_pro_addedit_pro_info"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/home_mgr_pro_addedit_divider"
            />
        <include
            layout="@layout/list_item_pro_addedit_pro_price"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/home_mgr_pro_addedit_divider"
            />
        <include
            layout="@layout/list_item_pro_addedit_pro_intro"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="@color/home_mgr_pro_addedit_divider"
            />
        <include
            layout="@layout/list_item_pro_addedit_pro_recommend"/>

        <Button
            android:id="@+id/home_mgr_pro_ae_bottom_done"
            android:layout_width="477dp"
            android:layout_height="51dp"
            android:background="@drawable/home_mgr_pro_ae_bottom_done_bg"
            android:text="@string/home_mgr_pro_addedit_done"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="106dp"
            android:layout_marginBottom="27dp"
            android:textSize="@dimen/home_mgr_pro_ae_title_size" />
    </LinearLayout>

</com.qieyou.qieyoustore.ui.widget.TransScrollView>
