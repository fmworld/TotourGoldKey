<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:orientation="vertical">
        <com.qieyou.qieyoustore.ui.widget.TrangleUpView
            android:layout_width="18dp"
            android:layout_height="10dp"
            android:layout_above="@+id/filter_layout"
            android:layout_marginLeft="280dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_coners_black_round"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mall_filter_title_1"
                style="@style/mall_filter_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="@string/mall_filter_title_1" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/gray_line" />

            <ListView
                android:id="@+id/mall_filter_local_title"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@color/transparent"></ListView>

            <TextView
                android:id="@+id/mall_filter_title_2"
                style="@style/mall_filter_title"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="@string/mall_filter_title_2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_weight="1"
                android:background="@color/gray_line" />

            <ListView
                android:id="@+id/mall_filter_sort_type"
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:listSelector="@color/transparent"></ListView>

            <Button
                android:id="@+id/mall_filter_complete"
                style="@style/mall_complete_button"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_marginBottom="8dp"
                android:text="@string/complete" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>