<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/pro_info_name_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/home_mgr_pro_ae_proinfo_size"
            android:drawableLeft="@drawable/home_mgr_pro_ae_required"
            android:drawablePadding="7dp"
            android:text="@string/home_mgr_pro_ae_proinfo_name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <com.qieyou.qieyoustore.ui.widget.ClearableEditText
            android:id="@+id/pro_info_name_value"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/home_mgr_pro_ae_text"
            android:layout_marginLeft="174dp"
            android:layout_marginRight="35dp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/home_mgr_pro_ae_list_item_line"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/pro_info_type_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/home_mgr_pro_ae_proinfo_size"
            android:drawableLeft="@drawable/home_mgr_pro_ae_required"
            android:drawablePadding="7dp"
            android:text="@string/home_mgr_pro_ae_proinfo_type"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/pro_info_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="77dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="174dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/home_mgr_pro_ae_proinfo_size"
            android:drawableRight="@drawable/home_mgr_pro_info_showtrangle"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/home_mgr_pro_ae_list_item_line"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">
        <TextView
            android:id="@+id/pro_info_label_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/home_mgr_pro_ae_proinfo_size"
            android:drawableLeft="@drawable/home_mgr_pro_ae_required"
            android:drawablePadding="7dp"
            android:text="@string/home_mgr_pro_ae_label_type"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/pro_info_label_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="77dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="174dp"
            android:layout_marginRight="35dp"
            android:drawablePadding="7dp"
            android:textColor="@color/white"
            android:textSize="@dimen/home_mgr_pro_ae_proinfo_size"
            android:drawableRight="@drawable/home_mgr_pro_info_showtrangle"
            />
    </RelativeLayout>


</LinearLayout>
