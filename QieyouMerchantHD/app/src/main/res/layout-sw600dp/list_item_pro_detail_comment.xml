<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
   <TextView
       android:id="@+id/pro_detail_comment_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:drawableLeft="@drawable/pro_detail_comment"
       android:drawablePadding="10dp"
       android:text="@string/detail_comment_title"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
       android:layout_marginLeft="10dp"
       style="@style/pro_detail_content_right"
       />

    <ImageView
        android:id="@+id/pro_detail_traver_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pro_detail_comment_traver_icon"
        android:layout_below="@+id/pro_detail_comment_title"
        android:layout_alignLeft="@+id/pro_detail_comment_title"
        />
    <TextView
        android:id="@+id/pro_detail_tra_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_comment_tra_tag"
        android:layout_below="@+id/pro_detail_traver_icon"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/pro_detail_comment_title"
        android:background="@drawable/bg_coners_green_stroke_round"
        style="@style/pro_detail_content_right_tag"
        />

    <TextView
        android:id="@+id/pr_detail_comment_tra_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pro_detail_traver_icon"
        android:layout_marginLeft="10dp"
        android:minHeight="80dp"
        android:layout_alignTop="@+id/pro_detail_traver_icon"
        style="@style/pro_detail_content_right"
        />

    <ImageView
        android:id="@+id/pro_detail_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pro_detail_line"
        android:layout_below="@+id/pr_detail_comment_tra_value"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <ImageView
        android:id="@+id/pro_detail_boss_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pro_detail_comment_boss_icon"
        android:layout_below="@+id/pro_detail_line"
        android:layout_alignLeft="@+id/pro_detail_comment_title"
        />
    <TextView
        android:id="@+id/pro_detail_boss_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_comment_boss_tag"
        android:layout_below="@+id/pro_detail_boss_icon"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/pro_detail_comment_title"
        android:background="@drawable/bg_coners_green_stroke_round"
        style="@style/pro_detail_content_right_tag"
        />

    <TextView
        android:id="@+id/pr_detail_comment_boss_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pro_detail_boss_icon"
        android:layout_alignTop="@+id/pro_detail_boss_icon"
        android:layout_marginLeft="10dp"
        android:minHeight="110dp"
        style="@style/pro_detail_content_right"
        />
</RelativeLayout>
