<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="855dp"
    android:layout_height="554dp"
    android:background="#898989"
    android:orientation="vertical">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/store_vp_post"
        android:layout_width="855dp"
        android:layout_height="554dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="@color/store_vp_item_bottom_bg"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/store_vp_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/store_vp_text"
            android:textColor="@color/white"
            android:lines="1"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:paddingTop="12dp"
            android:text="@string/store_item_load"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/store_vp_item_bottom_button"
            />
        <TextView
            android:id="@+id/store_vp_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/store_vp_price"
            android:textColor="@color/store_sudoku_grid_item_price"
            android:lines="1"
            android:text="@string/store_item_price_init"
            android:layout_alignLeft="@+id/store_vp_item_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/store_vp_item_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/store_vp_price_unit"
            android:textColor="@color/store_sudoku_grid_item_price_unit"
            android:lines="1"
            android:text="@string/rmb_unit"
            android:layout_toRightOf="@+id/store_vp_item_price"
            android:layout_alignTop="@+id/store_vp_item_price"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:id="@+id/store_vp_item_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/store_vp_old_price"
            android:textColor="@color/store_sudoku_grid_item_price_unit"
            android:lines="1"
            android:text="@string/store_item_price_init"
            android:layout_toRightOf="@+id/store_vp_item_price_unit"
            android:layout_alignBottom="@+id/store_vp_item_price_unit"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/store_vp_item_old_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/store_vp_old_price_unit"
            android:textColor="@color/store_sudoku_grid_item_price_unit"
            android:lines="1"
            android:text="@string/rmb_unit"
            android:layout_toRightOf="@+id/store_vp_item_old_price"
            android:layout_alignTop="@+id/store_vp_item_old_price"
            android:layout_marginLeft="5dp"
            />

        <Button
            android:id="@+id/store_vp_item_bottom_button"
            android:layout_width="187dp"
            android:layout_height="41dp"
            android:textColor="@color/white"
            android:textSize="@dimen/store_vp_item_bottom_button"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/store_vp_bottom_able_bg"
            />
    </RelativeLayout>
</RelativeLayout>
