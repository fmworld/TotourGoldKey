<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:layout_gravity="center|top"
        android:background="@color/home_navogation_bg"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/home_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:listSelector="@android:color/transparent"/>

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/home_navi_user"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/navi_person_name"
            android:layout_marginBottom="10dp"
            fresco:placeholderImage="@drawable/user_default_icon"
            fresco:roundAsCircle="true" />
        <TextView
            android:id="@+id/navi_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_person_title"
            style="@style/home_person_title"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/fragment_content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#202637">
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragment_content_second_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/translucent_2"
            android:visibility="gone"
            >
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fragment_content_third_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/translucent_2"
            android:visibility="gone"
            >
        </FrameLayout>
        <LinearLayout
            android:id="@+id/home_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent_2"
            android:orientation="horizontal"
            android:visibility="gone"
            >
            <FrameLayout
                android:id="@+id/home_menu_content"
                android:layout_width="318dp"
                android:layout_height="match_parent"
                >
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>