<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    Dialog_Alert
    <style name="HoriCentDialogTitle" parent="android:Theme.Dialog">

        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="translucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent_2</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="deep_translucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent_2</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="load_translucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/translucent_1</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="new_tag_translucent" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/home_mgr_pro_tag_new_activity_bg</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActionSheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="ActionSheetAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>

    <style name="store_vp_indicator_text">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mall_category_item_unselected">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mall_category_city_unselected">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="mall_filter">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mall_filter_bg</item>
    </style>

    <style name="home_person_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
